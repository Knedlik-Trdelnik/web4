<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.1">

    <!-- https://gist.github.com/csekme/bc441bea36d5041adfcdcfa55d7c4554 -->

    <persistence-unit name="main" transaction-type="JTA">
        <description>JaZaebalsya</description>
        <class>alfarius.goida.web4.models.User</class>
        <class>alfarius.goida.web4.models.Dot</class>
        <properties>
            <property name="hibernate.show_sql" value="true"/>
            <property name="eclipselink.weaving" value="false"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
        </properties>
    </persistence-unit>

    <!-- ... -->
</persistence>